# Izinkan akses lintas origin jika diperlukan (opsional)
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
</IfModule>

# Matikan directory listing (daftar folder) - Ini KUNCI agar folder tidak muncul
Options -Indexes

# Paksa index.html sebagai file utama
DirectoryIndex index.html

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Pastikan selalu menggunakan HTTPS (Opsional, aktifkan jika perlu)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # 2. Logic React Router (SPA)
  # Jika file atau folder fisik ada, layani langsung
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Jika tidak ada, lempar ke index.html
  RewriteRule ^ index.html [L]
</IfModule>
